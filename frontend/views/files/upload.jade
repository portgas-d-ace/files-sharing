.page-header
  h2
    i.fa.fa-upload
    | File Upload
h3 File Upload Form
.row(ng-controller="uploadController as ctrl")
  .col-sm-6
    form(name="form")
      .form-group
        label.control-label File Input
        button.btn.btn-primary(type='button', ngf-select="ctrl.onFilesSelect($files)", ngf-multiple="true") Choose File
          .badge-container
            .badge.composer-badge(ng-hide='fileUploadStatus.number === 0', ng-class="{ error: fileUploadStatus.error }")
            div(ng-class="{ uploading: fileUploadStatus.uploading }")
